@model SamsWarehouse.Models.User

@{
	ViewData["Title"] = "Login";
}



<div class="card shadow" style="width: 40%; margin: 0 auto">
	<img src="/media/Sams Warehouse Shopping Cart.svg" class="card-img-top" alt="Sam's Warehouse Logo" style="width: 40%; margin: 0 auto">
	<div class="card-body">
		<h1>Sam's Warehouse</h1>
		<h3>Please log in to continue</h3>

		<div class="row">
			<div class="col-md-6">
				<form asp-action="Login">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<div class="form-group mb-2">
						<label asp-for="Email" class="control-label"></label>
						<input asp-for="Email" class="form-control" />
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>

					<div class="form-group mb-2">
						<label asp-for="PasswordHash" class="control-label"></label>
						<input asp-for="PasswordHash" type="Password" class="form-control" />
						<span asp-validation-for="PasswordHash" class="text-danger"></span>
					</div>

					<div class="form-group">
						<input type="submit" value="Login" class="btn btn-outline-dark mb-4" />
					</div>
				</form>
			</div>
		</div>

		<hr />

		<h4>No Account Yet? No Worries!</h4>
		<h5>Sign up today with your email address</h5>

		<div class="row">
			<div class="col-md-6">
				<form asp-action="CreateUser">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<div class="form-group mb-2">
						<label asp-for="Email" class="control-label"></label>
						<input asp-for="Email" class="form-control" />
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>

					<div class="form-group mb-2">
						<label asp-for="PasswordHash" class="control-label"></label>
						<input asp-for="PasswordHash" class="form-control" />
						<span asp-validation-for="PasswordHash" class="text-danger"></span>
					</div>

					<div class="form-group">
						<input type="submit" value="Sign Up" class="btn btn-outline-dark mb-4" />
					</div>
				</form>
			</div>
		</div>


	</div>
</div>
